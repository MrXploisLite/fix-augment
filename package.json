{
  "name": "fix-augment",
  "displayName": "Fix Augment",
  "description": "Enhanced Augment extension with improved Agent workflows, formatting, and productivity features by MrXploisLite",
  "version": "2.0.0",
  "publisher": "MrXploisLite",
  "author": {
    "name": "MrXploisLite"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrXploisLite/fix-augment"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "augment",
    "ai",
    "agent",
    "chat",
    "completions",
    "productivity",
    "formatting"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fix-augment.enhanceInput",
        "title": "Augment: Enhance Input"
      },
      {
        "command": "fix-augment.formatOutput",
        "title": "Augment: Format Output"
      },
      {
        "command": "fix-augment.toggleEnhancement",
        "title": "Augment: Toggle Enhancement"
      },
      {
        "command": "fix-augment.smartChunk",
        "title": "Augment: Smart Chunk Large Input"
      },
      {
        "command": "fix-augment.applyTheme",
        "title": "Augment: Apply Syntax Theme"
      },
      {
        "command": "fix-augment.optimizeCodeBlocks",
        "title": "Augment: Optimize Code Blocks"
      },
      {
        "command": "fix-augment.enhanceAgent",
        "title": "Augment: Enhance Agent Workflow"
      },
      {
        "command": "fix-augment.formatInstructions",
        "title": "Augment: Format Instructions"
      },
      {
        "command": "fix-augment.optimizeNextEdit",
        "title": "Augment: Optimize Next Edit Context"
      }
    ],
    "configuration": {
      "title": "Fix Augment",
      "properties": {
        "fixAugment.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the Fix Augment extension"
        },
        "fixAugment.maxInputSize": {
          "type": "number",
          "default": 10000,
          "description": "Maximum size of input to process at once (in characters)"
        },
        "fixAugment.outputFormat": {
          "type": "string",
          "enum": ["default", "enhanced", "markdown", "html"],
          "default": "enhanced",
          "description": "Format to use for Augment outputs"
        },
        "fixAugment.autoFormatOutput": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format Augment outputs as they appear"
        },
        "fixAugment.syntaxTheme": {
          "type": "string",
          "enum": ["default", "github", "monokai", "dracula", "nord"],
          "default": "github",
          "description": "Syntax highlighting theme for code blocks"
        },
        "fixAugment.smartChunking": {
          "type": "boolean",
          "default": true,
          "description": "Use smart chunking to preserve context when splitting large inputs"
        },
        "fixAugment.preserveCodeBlocks": {
          "type": "boolean",
          "default": true,
          "description": "Keep code blocks intact when chunking large inputs"
        },
        "fixAugment.enhanceAgent": {
          "type": "boolean",
          "default": true,
          "description": "Enhance Agent workflows with better context and formatting"
        },
        "fixAugment.optimizeNextEdit": {
          "type": "boolean",
          "default": true,
          "description": "Optimize Next Edit suggestions with enhanced context"
        },
        "fixAugment.formatInstructions": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format Instructions for better clarity"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "fix-augment.enhanceInput",
          "when": "editorHasSelection",
          "group": "augment@1"
        },
        {
          "command": "fix-augment.formatOutput",
          "when": "editorHasSelection",
          "group": "augment@2"
        },
        {
          "command": "fix-augment.smartChunk",
          "when": "editorHasSelection",
          "group": "augment@3"
        },
        {
          "command": "fix-augment.optimizeCodeBlocks",
          "when": "editorHasSelection",
          "group": "augment@4"
        },
        {
          "command": "fix-augment.formatInstructions",
          "when": "editorHasSelection",
          "group": "augment@5"
        }
      ],
      "commandPalette": [
        {
          "command": "fix-augment.enhanceInput",
          "when": "editorHasSelection"
        },
        {
          "command": "fix-augment.formatOutput",
          "when": "editorHasSelection"
        },
        {
          "command": "fix-augment.smartChunk",
          "when": "editorHasSelection"
        },
        {
          "command": "fix-augment.optimizeCodeBlocks",
          "when": "editorHasSelection"
        },
        {
          "command": "fix-augment.formatInstructions",
          "when": "editorHasSelection"
        },
        {
          "command": "fix-augment.applyTheme"
        },
        {
          "command": "fix-augment.toggleEnhancement"
        },
        {
          "command": "fix-augment.enhanceAgent"
        },
        {
          "command": "fix-augment.optimizeNextEdit"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "marked": "^12.0.0",
    "highlight.js": "^11.9.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
